<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.techtown.Jindani">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.UserRegisterActivity"></activity>
        <activity android:name=".activities.PersonInfoActivity" />
        <activity android:name=".activities.ChatActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SelectActivity"/>
        <activity android:name=".activities.QnaListActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".activities.WriteQuestionActivity"/>
        <activity android:name=".activities.UserSegmentActivity"/>
        <activity android:name=".activities.UserQnaDetailActivity"/>
    </application>

</manifest>